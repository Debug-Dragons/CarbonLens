
<% layout('layout/boilerplate') -%>
<style>
    div{
        font-family: 'Poppins',sans-serif;
        font-weight: bold;
    }
</style>
<div class="border p-3 mx-auto w-50 mt-5">
    <form action="/BusinessDb" method="post">
        <div class="mb-3">
            <label for="BName" class="form-label">Company Name</label>
            <input type="string" id="BName" class="form-control">

        </div>
        <div class="mb-3">
            <label for="Industry" class="form-label">Industry Name</label>
            <input type="string" id="Industry" class="form-control">

        </div>
        <div class="mb-3">
            <label for="Employees">Number Of Employees&nbsp;:&nbsp;</label>
            <input type="number" name="emp" id="emp"  size="70" min="0">
        </div>
        <div class="mb-3">
            <label for="WFHpercent">Work From Home Percentage&nbsp;:&nbsp; </label>
            <input type="number" name="wfh" id="wfh" size="70" min="0">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
